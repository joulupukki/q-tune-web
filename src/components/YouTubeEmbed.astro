---
interface Props {
  videoId: string;
  title?: string;
}

const { videoId, title = 'YouTube video' } = Astro.props;
---

<div class="relative w-full pb-[56.25%] h-0 overflow-hidden rounded-lg">
  <iframe
    class="absolute top-0 left-0 w-full h-full border-0"
    src={`https://www.youtube.com/embed/${videoId}`}
    title={title}
    allowfullscreen
    loading="lazy"
  ></iframe>
</div>
