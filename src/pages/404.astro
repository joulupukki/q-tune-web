---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <div class="flex flex-col items-center justify-center py-32 px-4 text-center">
    <h1 class="text-8xl font-heading font-bold text-amber-glow mb-4">404</h1>
    <p class="text-xl text-text-heading font-medium mb-2">Page not found</p>
    <p class="text-text-muted mb-8">The requested page could not be found.</p>
    <a
      href="/"
      class="inline-flex items-center px-6 py-3 bg-amber-glow text-white font-semibold rounded-lg hover:bg-amber-dark transition-colors"
    >
      Go Home
    </a>
  </div>
</BaseLayout>
